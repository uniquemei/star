<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/yaoqing_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_yaoqing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/abc_ic_ab_back_holo_light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="填写注册邀请码"
            android:textSize="@dimen/normalbig_size" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/yaoqingma_li"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:layout_height="50dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:gravity="center_vertical"
           android:textSize="@dimen/normal_size"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:text="邀请码"/>
        <EditText
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"

        android:layout_height="50dp">

        <Button
            android:layout_weight="1"
            android:id="@+id/yaoqingma_reset"
            android:text="重置"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/smallbig_size"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:text="提交"
            android:layout_weight="1"
            android:textSize="@dimen/smallbig_size"
            android:id="@+id/yaoqingma_submit"
            android:layout_toRightOf="@+id/yaoqingma_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>