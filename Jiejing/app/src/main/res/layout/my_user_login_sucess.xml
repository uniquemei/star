<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg">

    <RelativeLayout
        android:id="@+id/user_login_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/login_sucess_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/abc_ic_ab_back_holo_light" />

        <TextView
            android:id="@+id/itemNameActionBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="账号信息"
            android:textSize="@dimen/big_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_login_title"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/login_sucess_phoneNumber"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:hint="手机号:"
                android:padding="10dp"
                android:textSize="@dimen/normal_size" />

            <TextView
                android:id="@+id/user_phone_number"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:text="18363820127"
                android:textSize="@dimen/normal_size" />
        </LinearLayout>

        <View style="@style/user_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:hint="余   额:"
                android:padding="10dp"
                android:textSize="@dimen/normal_size" />

            <TextView
                android:id="@+id/user_balance"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:text="0.00元"
                android:textSize="@dimen/normal_size" />
        </LinearLayout>

        <View style="@style/user_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:hint="积   分:"
                android:padding="10dp"
                android:textSize="@dimen/normal_size" />

            <TextView
                android:id="@+id/user_phone_score"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:text="0 分"
                android:textSize="@dimen/normal_size" />
        </LinearLayout>
        <View style="@style/user_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:hint="优惠劵:"
                android:padding="10dp"
                android:textSize="@dimen/normal_size" />

            <TextView
                android:id="@+id/user_phone_coupon"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:text="10张"
                android:textSize="@dimen/normal_size" />
        </LinearLayout>
        <View style="@style/user_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:hint="邀请码:"
                android:padding="10dp"
                android:textSize="@dimen/normal_size" />

            <TextView
                android:id="@+id/user_phone_invitation_id"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:text="823370"
                android:textSize="@dimen/normal_size" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/leave"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/login_btn"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#fff"
        android:textSize="@dimen/normal_size" />

</RelativeLayout>
