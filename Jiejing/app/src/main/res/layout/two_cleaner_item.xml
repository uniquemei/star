<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:paddingRight="5dp">

    <ImageView
        android:id="@+id/two_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingRight="10dp"
        android:src="@mipmap/baomu_them" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/two_img"
        android:background="#fff">

        <LinearLayout
            android:id="@+id/cleaner_item_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/two_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="编号："
                android:textColor="@color/black"
                android:textSize="@dimen/normal_size" />

            <TextView
                android:id="@+id/two_cleanerid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="12323"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_size" />

            <TextView
                android:id="@+id/two_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:text="类型"
                android:textColor="@color/black"
                android:textSize="@dimen/smallbig_size"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/cleaner_item_linearLayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/two_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="姓名："
                android:textColor="@color/black"
                android:textSize="@dimen/small_size" />

            <TextView
                android:id="@+id/two_cleanerName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="12323"
                android:ellipsize="end"
                android:maxWidth="200dp"
                android:textColor="@color/black"
                android:textSize="@dimen/small_size" />

            <View
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="0.5dp"
                android:layout_height="15dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/two_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="服务次数："
                android:textColor="@color/black"
                android:textSize="@dimen/small_size" />

            <TextView
                android:id="@+id/two_cleanNum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/black"
                android:textSize="@dimen/small_size" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/two_saveCleaner"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/two_savecleaner"
            android:button="@null"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/small_size" />
    </LinearLayout>


</RelativeLayout>
