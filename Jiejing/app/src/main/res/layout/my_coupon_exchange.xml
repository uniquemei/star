<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/user_center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coupon_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/abc_ic_ab_back_holo_light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="兑换优惠券"
            android:textSize="@dimen/big_size" />

        <ImageView
            android:id="@+id/couponPic"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/wallet_base_info_hover" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/new_activity_user_center_yue_pic" />
            </RelativeLayout>

            <TextView
                android:id="@+id/money"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="0.00"
                android:textSize="40dp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="您可以再下单前页面选择优惠劵使用"
            android:textColor="@color/gray"
            android:textSize="@dimen/normal_size" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center">

        <EditText
            android:id="@+id/conpouNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入优惠码"
            android:minWidth="300dp"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/normal_size" />

        <Button
            android:id="@+id/exchangeConpou"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:padding="5dp"
            android:text="兑换优惠券"
            android:textSize="@dimen/normal_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center">

        <EditText
            android:id="@+id/inviteNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入邀请码"
            android:minWidth="300dp"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/normal_size" />

        <Button
            android:id="@+id/exchangeInviteNumber"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/login_btn"
            android:gravity="center"
            android:padding="5dp"
            android:text="兑换邀请码"
            android:textSize="@dimen/normal_size" />
    </RelativeLayout>

</LinearLayout>