<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg">

    <RelativeLayout
        android:id="@+id/more_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/more_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/abc_ic_ab_back_holo_light" />

        <TextView
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="更多"
            android:textSize="@dimen/big_size" />
    </RelativeLayout>


    <View
        android:id="@+id/more_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/more_title"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_view"
        android:orientation="vertical">

        <Button
            android:id="@+id/about_us"
            style="@style/user_center_button"
            android:text="关于我们" />

        <!--<View style="@style/user_view" />-->

        <!--<Button-->
        <!--android:id="@+id/daohang"-->
        <!--style="@style/user_center_button"-->
        <!--android:text="查看导航页" />-->

        <View style="@style/user_view" />

        <LinearLayout
            android:id="@+id/more_version"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="检测版本"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:gravity="right|center_vertical"
                android:text="V4.2"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_size" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
