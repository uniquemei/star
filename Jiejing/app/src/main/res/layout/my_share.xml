<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/user_share_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:paddingRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/share_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/abc_ic_ab_back_holo_light" />

        <TextView
            android:id="@+id/shareTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="分享好友"
            android:textSize="@dimen/big_size"
            />
    </RelativeLayout>
    <View
        android:layout_below="@id/user_share_title"
        android:id="@+id/view"
        android:layout_height="1dp"
        android:layout_width="match_parent" />
    <LinearLayout
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#fff"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="分享好友获得5个积分"
            android:textSize="@dimen/normal_size"/>
        <View style="@style/user_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">
          <RelativeLayout
              android:id="@+id/qqPart"
              android:layout_width="0dp"
              android:layout_marginLeft="10dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center_vertical|center_horizontal">
             <ImageView
                 android:id="@+id/qqImage"
                 android:layout_width="80dp"
                 android:layout_height="80dp"
                 android:src="@mipmap/qq"
                 android:scaleType="fitXY"/>
              <TextView
                  android:layout_marginTop="15dp"
                  android:layout_marginLeft="15dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/qqImage"
                  android:text="QQ空间"
                  android:textSize="@dimen/normal_size"/>
          </RelativeLayout>
            <View
                android:layout_height="match_parent"
                android:layout_width="0.5dp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:id="@+id/sinaPart"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal">
                <ImageView
                    android:id="@+id/sina"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/invite_page_sina_icon"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sina"
                    android:text="新浪微博"
                    android:textSize="@dimen/normal_size"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
