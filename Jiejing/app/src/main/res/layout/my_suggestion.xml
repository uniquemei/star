<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sugession_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sugession_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/abc_ic_ab_back_holo_light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="意见反馈"
            android:textSize="@dimen/big_size" />

        <TextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="提交"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/normalbig_size" />

    </RelativeLayout>

    <View
        android:id="@+id/sugession_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/sugession_title"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sugession_view"
        android:background="@color/white">

        <EditText
            android:id="@+id/sugession_con"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="top"
            android:hint="请描述您的详情，我们会尽快帮您解决.........."
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:textColor="#000"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/normal_size" />
    </LinearLayout>
</RelativeLayout>
