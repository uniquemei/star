<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">


    <com.fly.jiejing.pickerlib.wheel.WheelView
        android:id="@+id/wheel_view_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:layout_gravity="center"
        wheel:lineSplitHeight="@dimen/wheel_line_split_height"
        wheel:splitLineColor="@color/split_line_gray"
        wheel:textColorFirst="@color/light_s_gray"
        wheel:textColorSecond="@color/light_gray"
        wheel:textColorThird="@color/deep_ss_gray"
        wheel:textSize="@dimen/font_size_s_large" />

    <com.fly.jiejing.pickerlib.wheel.WheelView
        android:id="@+id/wheel_view_hour"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_weight="1"

        wheel:lineSplitHeight="@dimen/wheel_line_split_height"
        wheel:splitLineColor="@color/split_line_gray"
        wheel:textColorFirst="@color/light_s_gray"
        wheel:textColorSecond="@color/light_gray"
        wheel:textColorThird="@color/deep_ss_gray"
        wheel:textSize="@dimen/font_size_s_large" />

    <com.fly.jiejing.pickerlib.wheel.WheelView
        android:id="@+id/wheel_view_minute"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        wheel:lineSplitHeight="@dimen/wheel_line_split_height"
        wheel:splitLineColor="@color/split_line_gray"
        wheel:textColorFirst="@color/light_s_gray"
        wheel:textColorSecond="@color/light_gray"
        wheel:textColorThird="@color/deep_ss_gray"
        wheel:textSize="@dimen/font_size_s_large" />

</LinearLayout>